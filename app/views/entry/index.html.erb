<div class="container">
  <% @entries.each_with_index do |entry, i| %>
    <div class="entry">
      <a name="entry<%=i+1%>"></a>
            <div class="entry-body">
              <a href='<%= entry.link %>' title="<%= source_str(entry) %>">
          <img
            data-src="<%= entry.content %>"
            src=data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==
            onload=lzld(this) onerror=lzld(this) />
        </a>
      </div>

      <div class="entry-footer">
        <% if !(/tumblr.com/ =~ entry.content) %>
          <span class="entry-title"><%= strip_tags(entry.title) %></span>
        <% end %>

        <span class="published-time"><a href="/?page=<%=params[:page]%>#entry<%=i+1%>"><%= time_ago_in_words(entry.published) %> ago</a></span>
      </div>
    </div>
  <% end %>

  <div id="pagination">
    <% if @page > 1 %>
      <%= link_to raw("&larr; Previous"), root_path(page: @page-1) %>
    <% end %>

    <% if @next_page %>
      <%= link_to raw("Next &rarr;"), root_path(page: @page+1) %>
    <% end %>
  </div>
</div>

